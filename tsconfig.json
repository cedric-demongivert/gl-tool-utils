{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "types": ["jest", "node"],
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "declaration": true,
    "declarationDir": "./distribution/types",
    "outDir": "./distribution/sources"
  },
  "typedocOptions": {
    "entryPoints": ["./sources"],
    "out": "./distribution/documentation",
    "readme": "none",
    "excludePrivate": true
  },
  "include": [
      "sources/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
